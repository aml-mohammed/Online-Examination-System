@model IEnumerable<OnlineExamination.ViewModels.ResultViewModel>

@{
    ViewData["Title"] = "Result";
}

<h1>Result</h1>
<div id="parentDiv">
    <br />
    <div>
        <table id="rsultGrid"
               class="table table-striped table-bordered dt-responsive flex-nowrap"
               width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Exam Name</th>
                    <th>Total Questions</th>
                    <th>Correct</th>
                    <th>Wrong</th>
                

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.ExamName</td>
                    <td>@item.TotalQuestion</td>
                    <td>@item.CorrectAnswer</td>
                    <td>@item.WrongAnswer</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div>
    <a asp-action="Index">student list</a>
    <a id="printPdf" class="btn btn-primary">Print</a>
</div>
@section scripts{
                <script>
                    $("#printPdf").click(function () {
                        var elsement = document.getElementById("parentDiv");
                        html2pdf().from(element).set({
                            marging: [30, 10, 5, 10],
                            pagebreak: { avoid: 'tr' },
                            jsPDF: { orentation: 'landscape', unit: 'pt', format: 'letter', compressPDF: true }
                        }).save()
                    });

                </script>
            }

