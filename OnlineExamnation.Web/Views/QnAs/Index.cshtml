@model PagedResult<OnlineExamination.ViewModels.QnAsViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

<div>
    <br />
    <a asp-action="Create" asp-controller="QnAs" class="btn btn-primary">Create New</a>
    <div>
        <table id="userGrid" class="table table-striped table-bordered dt-responsive nowrap"
               width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th> Questions</th>
                    <th> option1</th>
                    <th> option2</th>
                    <th> option3</th>
                    <th> option4</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Data)
                {
                <tr>
                    <td>@item.Qustion</td>
                    <td>@item.Option1</td>
                    <td>@item.Option2</td>
                    <td>@item.Option3</td>
                    <td>@item.Option4</td>
                </tr>
                }
            </tbody>

        </table>
        <cs-pager cs-paging-pagesize=(int)Model.PageSize
                  cs-paging-pagenumber=(int)Model.PageNumber
                  cs-paging-totalitems=(int)Model.TotalItems
                  cs-pagenumber-param="pagenumber"
                  asp-controller="QnAs"
                  asp-action="Index"
                  cs-pager-li-current-class="page-item active"
                  cs-pager-li-other-class="page-item"
                  cs-pager-non-active-class="page-item disabled"
                  cs-pager-link-current-class="page-link"
                  cs-pager-link-other-class="page-link">
        </cs-pager>
    </div>
</div>
@section scripts{
    <script>
    $(document).ready(function () {
        $('#userGrid').DataTable({
                "paging": false,
                    "filter": true
            });
    });
    </script>
}

