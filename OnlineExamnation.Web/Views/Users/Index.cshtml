@model PagedResult<OnlineExamination.ViewModels.UsersViewModel>

@{
    ViewData["Title"] = "Index";
}
<div>
    <br />
    <a asp-action="Create" asp-controller="Users" class="btn btn-primary">Create New</a>
    <div>
    <table id="userGrid" class="table table-striped table-bordered dt-responsive nowrap"
           width="100%" cellspacing="0">
        <thead>
            <tr>
                <th> Name</th>
                <th> Username</th>
                <th> Role</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.UserName</td>
                    <td>@item.Role</td>
                </tr>
            }
        </tbody>

    </table>
    <cs-pager cs-paging-pagesize=(int)Model.PageSize
              cs-paging-pagenumber=(int)Model.PageNumber
              cs-paging-totalitems=(int)Model.TotalItems
              cs-pagenumber-param="pagenumber"
              asp-controller="Users"
              asp-action="Index"
              cs-pager-li-current-class="page-item active"
               cs-pager-li-other-class="page-item"
               cs-pager-non-active-class="page-item disabled"
               cs-pager-link-current-class="page-link"
               cs-pager-link-other-class="page-link">
       </cs-pager>
        </div>
</div>
@section scripts{ 
<script>
    $(document).ready(function () {
        $('#userGrid').DataTable({
                "paging": false,
                    "filter": true
            });
    });
</script>
}

